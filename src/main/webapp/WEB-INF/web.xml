<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  
	<servlet>
		<servlet-name>blog</servlet-name>
		<servlet-class>blog.BlogServlet</servlet-class>
	</servlet>

	<servlet-mapping>
        <servlet-name>blog</servlet-name>
        <url-pattern>/blog</url-pattern>
    </servlet-mapping>
    
    <servlet>
    	<servlet-name>subscribe</servlet-name>
    	<servlet-class>blog.SubscribeServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
    	<servlet-name>subscribe</servlet-name>
    	<url-pattern>/subscribe</url-pattern>
    </servlet-mapping>
    
	<servlet>
		<servlet-name>cron</servlet-name>
		<servlet-class>blog.CronServlet</servlet-class>
	</servlet>

	<servlet-mapping>
        <servlet-name>cron</servlet-name>
        <url-pattern>/cron/dailydigest</url-pattern>
    </servlet-mapping>
   
	<welcome-file-list>
		<welcome-file>blog.jsp</welcome-file>
	</welcome-file-list>
</web-app>